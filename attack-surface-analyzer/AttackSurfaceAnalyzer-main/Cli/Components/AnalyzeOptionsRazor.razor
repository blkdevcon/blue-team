@inject Microsoft.CST.AttackSurfaceAnalyzer.Cli.AppData appData
@using Microsoft.CST.AttackSurfaceAnalyzer.Cli

<div>
    <div class="form-group">
        <div class="form-check">
            <input type="checkbox" class="form-check-input" id="enableAnalysisCheckbox" @bind="EnableAnalysis" />
            <label class="form-check-label" for="enableAnalysisCheckbox">Enable Analysis</label>
        </div>
    </div>
</div>

@code{
    bool EnableAnalysis
    {
        get
        {
            return !appData.ExportCollectCommandOptions.DisableAnalysis;
        }
        set
        {
            appData.ExportCollectCommandOptions.DisableAnalysis = !value;
        }
    }
}